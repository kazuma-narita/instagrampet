<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1>
        @<%= @user.location %>
      </h1>
      <h1>
        <%= link_to "following", following_user_path(@user) %>
        (<%= @user.following_users.count %>)
      </h1>
      <h1>
        <%= link_to "followers", followers_user_path(@user) %>
        (<%= @user.follower_users.count %>)
      </h1>
      <%= @user.profile %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>

    <% if @user.microposts.any? %>

      <h3>Photos (<%= @user.microposts.count %>)</h3>

      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>